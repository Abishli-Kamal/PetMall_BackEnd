@using PetMall_Project.Models
@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-controller="Slider" asp-action="Create" style="color:white;font-size:20px" class="mb-3 mx-2 btn btn-success">Create Slider</a>


    <table class="table table-dark mt-5">
        <thead>
            <tr>

                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Edit</th>
                <th scope="col">Detail</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">

            @foreach (Slider slider in Model)
            {
                <tr>

                    <td>
                        <img style="width:100px; height:70px;" src="~/assets/img/@slider.Image" />

                    </td>
                    <td>
                        @slider.Title

                    </td>
                    <td>
                        <div>
                            <a asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-danger"><i class="fa-solid fa-user-pen"></i></a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-danger">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger"> <i class="fa-solid fa-person-circle-minus"></i></a>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>


