@using PetMall_Project.Models
@model Slider
@{
    ViewData["Title"] = "Create";
}

<form class="mt-5 mx-5" method="post" enctype="multipart/form-data">
    <div>
        <label class="mb-3">Slider title:</label><br />
        <input asp-for="Title" class="form-control border border-info" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
   
    <div>
        <label class="mb-3">Slider image:</label><br />
        <input asp-for="Photo" class="form-control" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create slider</button>
    </div>
</form>

