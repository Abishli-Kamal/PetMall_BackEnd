@model Slider
@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="form form-control mt-5 mx-5">
   <div>
     <label class="mb-2" >Title:</label>
    <input asp-for="Title" class="form form-control border border-info mb-2"/> 
   </div>
   <div>
     <label class="mb-2" >Image:</label>
    <img style="width:300px;" src="~/assets/img/@Model.Image"/>
   </div>
   <div>
     <label class="mb-2" >Photo:</label>
    <input asp-for="Photo" class="form form-control mb-2"/> 
   </div>

   <div>
       <button type="submit" class="btn btn-dark"> Edit Slider</button>
   </div>
</form>

